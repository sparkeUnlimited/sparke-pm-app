{
  "title": "30-Day Incident Follow Up",
  "description": "Form to document 30-day follow up details for a dangerous goods incident.",
  "sections": [
    {
      "title": "1. Report Author",
      "fields": [
        { "label": "Name", "type": "text" },
        { "label": "TitleOrRole", "type": "text" },
        { "label": "Company", "type": "text" },
        { "label": "Phone24Hour", "type": "text" },
        { "label": "Email", "type": "text" }
      ]
    },
    {
      "title": "2. Consignor / Consignee / Carrier",
      "fields": [
        { "label": "Consignor", "type": "text" },
        { "label": "Consignee", "type": "text" },
        { "label": "Carrier", "type": "text" }
      ]
    },
    {
      "title": "3. Incident Summary",
      "fields": [
        { "label": "EventType", "type": "checkbox-group" },
        { "label": "DateTime", "type": "datetime" },
        { "label": "Location", "type": "text" },
        { "label": "ModeOfTransport", "type": "checkbox-group" }
      ]
    },
    {
      "title": "4. Dangerous Goods Details",
      "fields": [
        { "label": "Classification", "type": "text" },
        { "label": "UNNumberAndShippingName", "type": "text" },
        { "label": "QuantityBeforeIncident", "type": "number" },
        { "label": "QuantityReleased", "type": "number" }
      ]
    },
    {
      "title": "5. Containment and Damage",
      "fields": [
        { "label": "MeansOfContainment", "type": "text" },
        { "label": "DamageOrFailureNoted", "type": "checkbox" },
        { "label": "DamageDescription", "type": "textarea" }
      ]
    },
    {
      "title": "6. Sequence of Events",
      "fields": [
        { "label": "Description", "type": "textarea" },
        { "label": "ExplosionOrFire", "type": "checkbox" },
        { "label": "ExplosionOrFireDetails", "type": "textarea" }
      ]
    },
    {
      "title": "7. Facility Infrastructure Impact",
      "fields": [
        { "label": "FacilityClosed", "type": "checkbox" },
        { "label": "FacilityDetails", "type": "textarea" },
        { "label": "TransportClosure", "type": "checkbox" },
        { "label": "TransportClosureDetails", "type": "textarea" }
      ]
    },
    {
      "title": "8. Public Safety Impact",
      "fields": [
        { "label": "NumberEvacuatedOrSheltered", "type": "number" },
        { "label": "Duration", "type": "text" },
        { "label": "Deaths", "type": "number" },
        { "label": "Injuries", "type": "number" }
      ]
    },
    {
      "title": "9. ERAP",
      "fields": [
        { "label": "ERAPReferenceNumber", "type": "text" },
        { "label": "PersonWithERAP", "type": "text" },
        { "label": "DateTimeReported", "type": "datetime" }
      ]
    },
    {
      "title": "10. Reporting Timeline",
      "fields": [
        { "label": "DateOriginalReport", "type": "date" },
        { "label": "Date30DayReport", "type": "date" }
      ]
    },
    {
      "title": "11. Financial and Environmental Costs",
      "fields": [
        { "label": "EstimatedFinancialLoss", "type": "number" },
        { "label": "EmergencyResponseCosts", "type": "number" },
        { "label": "RemediationCleanupCosts", "type": "number" }
      ]
    },
    {
      "title": "12. Route and Jeopardy Assessment",
      "fields": [
        { "label": "RouteDescription", "type": "textarea" },
        { "label": "SeriousJeopardy", "type": "checkbox" },
        { "label": "JeopardyDetails", "type": "textarea" },
        { "label": "DamageToPropertyOrEnvironment", "type": "textarea" }
      ]
    },
    {
      "title": "13. Updates and Retention",
      "fields": [
        { "label": "UpdateRequirements", "type": "textarea" },
        { "label": "RetentionRequirement", "type": "textarea" }
      ]
    },
    {
      "title": "Submission Instructions",
      "fields": [
        { "label": "SubmissionMethod", "type": "text" },
        { "label": "Recipient", "type": "text" },
        { "label": "Email", "type": "text" },
        { "label": "Deadline", "type": "text" }
      ]
    },
    {
      "title": "Attachments Checklist",
      "fields": [
        { "label": "CANUTEC case number(s)", "type": "checkbox" },
        { "label": "Copy of original emergency report", "type": "checkbox" },
        { "label": "Investigation findings", "type": "checkbox" },
        { "label": "Photos & diagrams", "type": "checkbox" },
        { "label": "Witness statements", "type": "checkbox" },
        { "label": "Cost estimates and invoices", "type": "checkbox" }
      ]
    }
  ]
}
